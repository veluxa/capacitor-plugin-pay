
  <manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.veluxa.plugins.capacitorpluginpay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application  android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />

        <activity
            android:name="com.veluxa.plugins.wxapi.WXPayEntryActivity"
            android:label="WXPayEntryActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="true"
            android:taskAffinity="${wxPayPackageName}"
            android:launchMode="singleTask">
        </activity>

        <activity-alias
            android:name="${wxPayPackageName}.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:targetActivity="com.veluxa.plugins.wxapi.WXPayEntryActivity" >
        </activity-alias>
    </application>
  </manifest>
  